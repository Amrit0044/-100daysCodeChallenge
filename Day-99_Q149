// Use malloc() to allocate structure memory dynamically and print details.

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Data {
    int id;
    char name[50];
    float score;
};

int main() {
    struct Data *ptr;
    
    // Allocate memory dynamically for one struct
    ptr = (struct Data*)malloc(sizeof(struct Data));
    
    if (ptr == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    
    // Input details
    printf("Enter id, name, and score:\n");
    scanf("%d %49s %f", &ptr->id, ptr->name, &ptr->score);
    
    // Print details
    printf("\nDetails of the structure:\n");
    printf("ID: %d\n", ptr->id);
    printf("Name: %s\n", ptr->name);
    printf("Score: %.2f\n", ptr->score);
    
    // Free the allocated memory
    free(ptr);
    
    return 0;
}
