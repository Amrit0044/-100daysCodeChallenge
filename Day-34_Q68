// Delete an element from an array

#include <stdio.h>

int main() {
    int arr[100], n, i, pos, found = 0;

    printf("Enter the number of elements in the array:\n");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the element to delete:\n");
    int elem;
    scanf("%d", &elem);

    // Find the element position
    for(i = 0; i < n; i++) {
        if(arr[i] == elem) {
            pos = i;
            found = 1;
            break;
        }
    }

    if(!found) {
        printf("Element %d not found in the array.\n", elem);
        return 0;
    }

    // Shift elements left to delete the element
    for(i = pos; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }
    n--; // Decrease array size

    printf("Array after deletion:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
