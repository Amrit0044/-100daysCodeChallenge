// Find and print the student with the highest marks.

#include <stdio.h>

struct student {
    char name[50];
    int roll;
    float marks;
};

int main() {
    struct student s[5];
    int i, max_idx = 0;

    // Input student details
    printf("Enter information of students:\n");
    for (i = 0; i < 5; ++i) {
        printf("\nFor student %d,\n", i + 1);

        printf("Enter name: ");
        scanf("%s", s[i].name);

        printf("Enter roll number: ");
        scanf("%d", &s[i].roll);

        printf("Enter marks: ");
        scanf("%f", &s[i].marks);
    }

    // Find the student with the highest marks
    for (i = 1; i < 5; ++i) {
        if (s[i].marks > s[max_idx].marks) {
            max_idx = i;
        }
    }

    
    return 0;
}
